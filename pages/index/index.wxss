.player {
  position: fixed;
  top: 20rpx;
  right: 20rpx;
  z-index: 1;
}
.player > image {
  width: 80rpx;
  height: 80rpx;
  animation: musicRotate 3s linear infinite;
}
@keyframes musicRotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
.player-play > image {
  animation-play-state: running;
}
.player-pause > image {
  animation-play-state: paused;
}